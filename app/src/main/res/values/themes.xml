<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="App" />

    <style name="App.RatingBar">
        <item name="android:progressDrawable">@drawable/abs_ratingbar_custom</item>
        <item name="android:indeterminateDrawable">@drawable/abs_ratingbar_custom</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="App.Text" />

    <style name="App.Text.VBig">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="App.Text.VBig.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.Big">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.Text.Big.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.Mid">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App.Text.Mid.Link">
        <item name="android:textColor">@color/color_text_link</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="App.Text.Mid.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Text.Sml">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="App.Text.Sml.OneLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="App.Text.VSml">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>